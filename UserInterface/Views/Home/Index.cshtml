@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<DataModel.ToDoItem>


<div style="height:50px;"></div>
<h2 style="text-align:center;">My ToDo List</h2>
<div style="padding:20px;margin:20px;border:5px solid black;">
    <h3 style="margin-left:5px;">Create a New ToDo Item Here</h3>
    <div style="padding:10px;">
        <form method="post">
            <label for="todoDescription">Description:</label><br>
            <input type="text" id="todoDescription" name="todoDescription"><br>
            <input type="submit" value="Create ToDo" />
        </form>
    </div>
</div>
<div style="padding:20px;margin:20px;">

    @if (Model.Count() > 0)
    {
        <h3 style="text-align:center;">My Pending ToDo Items</h3>
        <ul>
            @foreach (var i in Model)
            {
                <li>@i.Description - <a href="\delete\@i.ID">delete</a> - <a href="\complete\@i.ID">mark complete</a></li>
            }
        </ul>
    } else
    {
        <p style="margin:5px;">You don't have any To Do Items on your list yet.  Go ahead and create one using the form above.</p>
    }

</div>
